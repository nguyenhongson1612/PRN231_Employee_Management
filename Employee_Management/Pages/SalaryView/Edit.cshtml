@page
@model Employee_Management.Pages.SalaryView.EditModel

<h4>Salary</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Salary.SalaryId" />
            <div class="form-group">
                <label asp-for="Salary.EmployeeId" class="control-label"></label>
                <select asp-for="Salary.EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                <span asp-validation-for="Salary.EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salary.SalaryAmount" class="control-label"></label>
                <input asp-for="Salary.SalaryAmount" class="form-control" />
                <span asp-validation-for="Salary.SalaryAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salary.SalaryMonth" class="control-label"></label>
                <input asp-for="Salary.SalaryMonth" class="form-control" />
                <span asp-validation-for="Salary.SalaryMonth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
