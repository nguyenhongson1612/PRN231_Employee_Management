@page
@model Employee_Management.Pages.AttendanceView.EditModel

<h4>Attendance</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Attendance.AttendanceId" />
            <div class="form-group">
                <label asp-for="Attendance.EmployeeId" class="control-label"></label>
                <select asp-for="Attendance.EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                <span asp-validation-for="Attendance.EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attendance.AttendanceDate" class="control-label"></label>
                <input asp-for="Attendance.AttendanceDate" class="form-control" />
                <span asp-validation-for="Attendance.AttendanceDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attendance.Status" class="control-label"></label>

                <div class="form-check">
                    <input asp-for="Attendance.Status" class="form-check-input" type="radio" value="Absent" id="absentRadio" />
                    <label class="form-check-label" for="absentRadio">Absent</label>
                </div>

                <div class="form-check">
                    <input asp-for="Attendance.Status" class="form-check-input" type="radio" value="Half-day" id="halfDayRadio" />
                    <label class="form-check-label" for="halfDayRadio">Half-day</label>
                </div>

                <div class="form-check">
                    <input asp-for="Attendance.Status" class="form-check-input" type="radio" value="Late" id="lateRadio" />
                    <label class="form-check-label" for="lateRadio">Late</label>
                </div>

                <div class="form-check">
                    <input asp-for="Attendance.Status" class="form-check-input" type="radio" value="Present" id="presentRadio" />
                    <label class="form-check-label" for="presentRadio">Present</label>
                </div>

                <span asp-validation-for="Attendance.Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
