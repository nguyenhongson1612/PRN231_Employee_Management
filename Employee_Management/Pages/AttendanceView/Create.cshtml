@page
@model Employee_Management.Pages.AttendanceView.CreateModel

<h4>Attendance</h4>
<hr />
<div class="container mt-5">
    <form method="post">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Employees.Count; i++)
                {
                    var item = Model.Employees[i];
                    <tr>
                        <td>@item.EmployeeId</td>
                        <td>@item.Fullname</td>
                        <td>
                            <div class="btn-group" data-toggle="buttons">
                                <label class="btn btn-secondary active">
                                    <input type="radio" name="AttendanceList[@i].Status" value="Absent" autocomplete="off" checked> Absent
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="AttendanceList[@i].Status" value="Half-day" autocomplete="off"> Half-day
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="AttendanceList[@i].Status" value="Late" autocomplete="off"> Late
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="AttendanceList[@i].Status" value="Present" autocomplete="off"> Present
                                </label>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    <button class="btn btn-primary">Submit</button>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
